<div style="height: 100%!important; background-size: cover">
  <div class="offset-4 col-4 authentication-inner py-5">
    <div class="card">
      <div class="p-4 p-sm-5">

        <%= form_with model: @item do |f| %>
          <div class="form-group">
            <%= f.label :title, class: 'form-label'  %><br>
            <%= f.text_field :title, autofocus: true, class:" form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, class: 'form-label'  %><br>
            <%= f.text_area :description, class:" form-control" %>
          </div>

          <div class="d-flex justify-content-center align-items-center m-0">
            <div class="actions">
                <%= f.submit "Salvar", class: "btn btn-primary" %>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>
